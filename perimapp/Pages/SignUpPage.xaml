<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="perimapp.Pages.SignUpPage"
             BackgroundColor="White">

        <VerticalStackLayout Spacing="20">
            <!-- Titre plein écran sur fond vert -->
            <Grid BackgroundColor="#58BF7F" Padding="20,20,20,20">
                <Label Text="PerimApp"
                       FontSize="40"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Sous-titre -->
            <Label Text="Inscription"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,20,0,40"/>

            <!-- Entrées personnalisées -->
            <VerticalStackLayout Padding="20" Spacing="25">

                <!-- Email -->
                <Grid>
                    <Entry Placeholder="Email"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           BackgroundColor="Transparent"
                           HeightRequest="40"
                           FontSize="20"
                           x:Name="EmailEntry"/>
                    <BoxView HeightRequest="1"
                             BackgroundColor="Black"
                             VerticalOptions="End"/>
                </Grid>

                <!-- Mot de passe -->
                <Grid>
                    <Entry Placeholder="Mot de passe"
                           IsPassword="True"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           BackgroundColor="Transparent"
                           HeightRequest="40"
                           FontSize="20"
                           x:Name="PasswordEntry"/>
                    <BoxView HeightRequest="1"
                             BackgroundColor="Black"
                             VerticalOptions="End"/>
                </Grid>

                <!-- Confirmer mot de passe -->
                <Grid>
                    <Entry Placeholder="Confirmer mot de passe"
                           IsPassword="True"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           BackgroundColor="Transparent"
                           HeightRequest="40"
                           FontSize="20"
                           x:Name="ConfirmPasswordEntry"/>
                    <BoxView HeightRequest="1"
                             BackgroundColor="Black"
                             VerticalOptions="End"/>
                </Grid>

                <!-- Code foyer -->
                <Grid>
                    <Entry Placeholder="Code foyer ?"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           BackgroundColor="Transparent"
                           HeightRequest="40"
                           FontSize="20"
                           x:Name="CodeFoyerEntry"/>
                    <BoxView HeightRequest="1"
                             BackgroundColor="Black"
                             VerticalOptions="End"/>
                </Grid>
            </VerticalStackLayout>

            <!-- Boutons -->
            <VerticalStackLayout Padding="20,20,20,40" Spacing="15">
                <Button Text="Suivant"
                        Clicked="OnNextSignUpClicked"
                        BackgroundColor="#58BF7F"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="18"
                        CornerRadius="50"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        WidthRequest="250"/>

                <Button Text="Retour"
                        Clicked="OnBackSignUpClicked"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="18"
                        CornerRadius="50"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        WidthRequest="250"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
</ContentPage>
