<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="perimapp.Pages.LogInPage"
             BackgroundColor="#58BF7F">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto" Padding="30">

            <StackLayout Grid.Row="0" Spacing="10">
                <Label Text="PerimApp"
                       FontSize="50"
                       FontAttributes="Bold"
                       FontFamily="InterBold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,40,0,10"/>
                <Label Text="Se connecter"
                       FontSize="24"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Spacing="30" VerticalOptions="Center">
                <StackLayout Spacing="5">
                    <Entry Placeholder="Adresse mail"
                           Style="{StaticResource UnderlineEntryStyle}"/>
                </StackLayout>

                <StackLayout Spacing="5">
                    <Entry Placeholder="Mot de passe"
                           Style="{StaticResource UnderlineEntryStyle}"
                           IsPassword="True"/>
                </StackLayout>

                <StackLayout Spacing="5">
                    <Entry Placeholder="Code foyer ?"
                           Style="{StaticResource UnderlineEntryStyle}"/>
                </StackLayout>
            </StackLayout>

            <StackLayout Grid.Row="2" Spacing="10" VerticalOptions="End" HorizontalOptions="Center">
                <Button Text="Suivant"
                        FontSize="20"
                        BackgroundColor="White"
                        TextColor="#58BF7F"
                        FontAttributes="Bold"
                        CornerRadius="50"
                        HeightRequest="50"
                        WidthRequest="300"/>
                <Button Text="Retour"
                        FontSize="20"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="50"
                        HeightRequest="50"
                        WidthRequest="300"/>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>
