<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="perimapp.Pages.LogInPage"
             BackgroundColor="#58BF7F">

    <VerticalStackLayout Spacing="20">

        <!-- En-tÃªte vert avec le titre -->
        <Grid Padding="20">
            <Label Text="PerimApp"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Sous-titre -->
        <Label Text="Se connecter"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>

        <!-- Champs de connexion -->
        <VerticalStackLayout Padding="20, 70, 20, 20" Spacing="25">

            <!-- Email -->
            <Grid>
                <Entry Placeholder="Adresse mail"
                       TextColor="White"
                       PlaceholderColor="White"
                       BackgroundColor="Transparent"
                       HeightRequest="40"
                       FontSize="20"/>
                <BoxView HeightRequest="1"
                         BackgroundColor="White"
                         VerticalOptions="End"/>
            </Grid>

            <!-- Mot de passe -->
            <Grid>
                <Entry Placeholder="Mot de passe"
                       IsPassword="True"
                       TextColor="White"
                       PlaceholderColor="White"
                       BackgroundColor="Transparent"
                       HeightRequest="40"
                       FontSize="20"/>
                <BoxView HeightRequest="1"
                         BackgroundColor="White"
                         VerticalOptions="End"/>
            </Grid>

            <!-- Code foyer -->
            <Grid>
                <Entry Placeholder="Code foyer ?"
                       TextColor="White"
                       PlaceholderColor="White"
                       BackgroundColor="Transparent"
                       HeightRequest="40"
                       FontSize="20"/>
                <BoxView HeightRequest="1"
                         BackgroundColor="White"
                         VerticalOptions="End"/>
            </Grid>
        </VerticalStackLayout>

        <!-- Boutons -->
        <VerticalStackLayout Padding="20,40,20,40" Spacing="15">
            <Button Text="Suivant"
                    BackgroundColor="White"
                    TextColor="#58BF7F"
                    FontAttributes="Bold"
                    FontSize="18"
                    CornerRadius="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    WidthRequest="250"/>

            <Button Text="Retour"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    CornerRadius="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    WidthRequest="250"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
